  <!-- Minimal JS: form handling, buy stub -->
  <script>
    function scrollToSection(id){
      const el = document.getElementById(id);
      if(el) el.scrollIntoView({behavior:'smooth', block:'start'});
    }

    function buy(url){
      // Replace with direct Gumroad/Payhip link. For testing opens placeholder.
      if(!url) return alert('Ссылка не задана');
      window.open(url, '_blank');
    }

    function subscribe(e){
      e.preventDefault();
      const email = document.getElementById('email').value.trim();
      if(!email) return alert('Введите email');
      // 1) Quick: redirect to Mailchimp embed / Google Form
      // 2) Or send to webhook (Zapier/Make) that adds to Mailchimp and sends file
      // For now — simulate:
      alert('Спасибо! На почту придёт чек-лист (симуляция). Замените это поведение на реальный webhook в инструкциях.');
      document.getElementById('email').value = '';
      // OPTIONAL: track event in analytics
    }
  </script>
